@model IEnumerable<MusicApp.ViewModels.PlaylistTracksViewModel>

@{
    ViewBag.Title = "Tracks";
}

@if (Model.Count() > 0)
{
    <h2> @Model.FirstOrDefault().playlistname.ToUpper()</h2>
}
else
{
    <h2>Nothing in this Playlist !</h2>
}



<p>
</p>
<table class="table">
    <tr>
      
        <th>
            @Html.DisplayNameFor(model => model.albumname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.length)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trackname)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.albumname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.length)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.trackname)
        </td>
      
        <td>
            @Html.ActionLink("Add Rating", "AddRating", new { id=item.trackid }) |
        </td>
    </tr>
}

</table>
