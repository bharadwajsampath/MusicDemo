@model MusicApp.ViewModels.AddtoPlaylist

@{
    ViewBag.Title = "AddToPlaylist";
}

<h2>@Model.trackname.ToUpper()</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add to Playlist</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.trackid, new { htmlAttributes = new { @class = "form-control" } })




        <div class="form-group">
            @Html.LabelFor(model => model.trackname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.LabelFor(model => model.trackname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.trackname, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.playlist, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.playlist, new SelectList(ViewBag.PlaylistCollection, "playlistid", "playlistname"))
                @Html.ValidationMessageFor(model => model.trackname, "", new { @class = "text-danger" })
            </div>
        </div>



        <h3>User Comments</h3>
        <hr />

        @foreach (var item in Model.UserCommentList)
        {

            <br/>
            <div class="col-md-12">
               &quot; <q> @item.comment</q>&quot;
                <br/>
                - @item.username 
            </div>

        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
